@model ReiDoAlmoco.WebApplication.ViewModels.CadastrarCandidatoViewModel
@{
    ViewData["Title"] = "Cadastrar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-offset-4 col-md-4">
        <form action="/Candidatos/Cadastrar" method="post" enctype="multipart/form-data">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3>Cadastrar Candidato</h3>
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Candidato.CandidatoNome)
                        @Html.TextBoxFor(m => m.Candidato.CandidatoNome, new { @class = "form-control" })
                        <p class="text-danger">@Html.ValidationMessageFor(m => m.Candidato.CandidatoNome)</p>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Candidato.CandidatoEmail)
                        @Html.TextBoxFor(m => m.Candidato.CandidatoEmail, new { @class = "form-control" })
                        <p class="text-danger">@Html.ValidationMessageFor(m => m.Candidato.CandidatoEmail)</p>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.FotoPerfil)
                        <input type="file" id="FotoPerfil" accept="image/*" name="FotoPerfil">
                        <p class="text-danger">@Html.ValidationMessageFor(m => m.FotoPerfil)</p>
                    </div>
                </div>
                <div class="panel-footer">
                    <button class="btn btn-danger" type="submit">Cadastrar</button>
                </div>
            </div>
        </form>
    </div>
</div>

